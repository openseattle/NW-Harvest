@model IEnumerable<NWHarvest.Web.ViewModels.ClaimViewModel>

<ul class="list-group">
    @foreach (var claim in Model)
    {
        <li class="list-group-item">
            <div class="row">
                <div class="col-xs-6 card">
                    <div class="card-body">
                        <div class="card-text">@claim.Quantity @claim.Product</div>
                        <div class="card-text">$@(claim.CostPerUnit * claim.Quantity)</div>
                    </div>
                </div>
                <div class="col-xs-6 pull-right">
                    <div class="card-body">
                        <div class="card-text">@Html.Partial("_Address", claim.Address)</div>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>
