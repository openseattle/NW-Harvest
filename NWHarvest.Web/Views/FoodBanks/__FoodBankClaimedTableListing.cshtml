@model IEnumerable<NWHarvest.Web.ViewModels.ClaimViewModel>

<table class="display table" width="100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ClaimedOn)</th>
            <th>@Html.DisplayNameFor(model => model.Product)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.CostPerUnit)</th>
            <th>@Html.DisplayNameFor(model => model.Address.City)</th>
            <th>@Html.DisplayNameFor(model => model.Address.County)</th>
            <th>@Html.DisplayNameFor(model => model.Address.Zip)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ClaimedOn)</td>
                <td>@Html.DisplayFor(modelItem => item.Product)</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>@Html.DisplayFor(modelItem => item.CostPerUnit)</td>
                <td>@Html.DisplayFor(modelItem => item.Address.City)</td>
                <td>@Html.DisplayFor(modelItem => item.Address.County)</td>
                <td>@Html.DisplayFor(modelItem => item.Address.Zip)</td>
            </tr>
        }
    </tbody>
</table>