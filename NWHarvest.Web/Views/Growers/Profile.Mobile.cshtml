@model NWHarvest.Web.ViewModels.GrowerViewModel

@{
    ViewBag.Title = "User Details";
    ViewBag.NavBarTitle = "Grower Profile";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            @Html.Partial("_GrowerDetail", Model)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h4>My Listings @Html.ActionLink("Create New", "Create", "Listings", null, new {@class="btn btn-xs btn-success" })</h4>
            @Html.Partial("_GrowerListing", Model.Listings.ToList())
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/javascript")

    <script type="text/javascript">
        $(document).ready(function () {

            $("a[data-toggle=\"tab\"]").on("shown.bs.tab", function (e) {
                $($.fn.dataTable.tables(true)).DataTable()
                    .columns.adjust()
                    .responsive.recalc();
            });

            var table = $('.table')
                .dataTable({
                    responsive: {
                        details: {
                            type: 'column',
                            target: -1,
                            display: $.fn.dataTable.Responsive.display.modal({
                                header: function (row) {
                                    return 'Listing';
                                }
                            }),
                            renderer: $.fn.dataTable.Responsive.renderer.tableAll({
                                tableClass: 'table'
                            })
                        }
                    },
                    columnDefs: [{
                        className:'control',
                        orderable: false,
                        targets: [-1]
                    }]
                });
        });
    </script>
}

