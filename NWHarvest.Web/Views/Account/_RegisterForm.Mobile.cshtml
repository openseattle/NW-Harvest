            @Html.DropDownListFor(m => m.UserRole, ViewBag.UserRoles as IEnumerable<SelectListItem>, "Select User Type", new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.UserRole, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-xs-10 col-xs-offset-1" })
        <div class="col-xs-10 col-xs-offset-1">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-xs-10 col-xs-offset-1" })
        <div class="col-xs-10 col-xs-offset-1">
