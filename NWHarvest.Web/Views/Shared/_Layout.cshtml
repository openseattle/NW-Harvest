<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse" style="background-color:#154399">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    <span class="navbar-brand-title">@ViewBag.NavBarTitle</span>
                    <a class="glyphicon glyphicon-home pull-left" href="@(ViewBag.Home ?? "/")"></a>
                </div>
            </div>

            <div class="navbar-collapse collapse" id="navbar-collapse-1">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <header class="header">
        <div class="container">
            <div class="bannerWrapper">
                <img src="~/Content/Banner.jpg" class="img-responsive" />
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Northwest Harvest</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
